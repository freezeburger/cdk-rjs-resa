{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": { "dependsOn": ["^build"], "outputs": ["dist/**"] },
    "dev": { "cache": false },
    "test": { "dependsOn": ["^build"] },
    "lint": {
      "outputs": ["reports/eslint/**"]
    },
    "report:lint:html": {
      "outputs": ["reports/eslint/**"]
    },
    "clean": { "cache": false, "outputs": [] }
  }
}
